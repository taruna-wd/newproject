<% layout("/layouts/boilerplate") -%>
<body>
  <div class="">
    <form
      class="row g-3 justify-content-center needs-validation my-2"
      novalidate
      method="post"
      action="/<%= listing._id %>?_method=PUT"
      enctype="multipart/form-data"
    >
      <h3 class="new" >Add New Food</h3>

      <div class="col-8 ">
        <label for="inputAddress" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %> "
          class="form-control"
          id="inputAddress"
          placeholder="Title "
          required
        />
        <div class="valid-feedback">
          Title is  good!
        </div>
    
      </div>
      <div class="col-8">
        <label for="inputAddress" class="form-label">description</label>
        <input
          type="text"
          name="listing[description]"
          value=" <%= listing.description %>"
          class="form-control"
          id="inputAddress"
          placeholder="description"
          required
        >

        
        <div class="valid-feedback">
          Description  should be shorter!
        </div>
    
      </div>
      <div class="col-8">
        <label for="inputAddress" class="form-label"> upload new  image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          id="inputAddress"
        />
        
    
      </div>
      <div class="col-8">
        <label for="inputAddress" class="form-label">price</label>
        <input
          type="number"
          name="listing[price]"
          value="<%= listing.price %>"
          class="form-control"
          id="inputAddress"
          placeholder="price "
          required
        />
        <div class="invalid-feedback">
          Price must be number eg 1299 ,3400 etc.
        </div>
    
      </div>
